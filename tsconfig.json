{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules", "playwright-report", "test-results"]
}
